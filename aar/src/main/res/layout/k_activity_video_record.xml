<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/k_black_2d"
    android:layout_height="match_parent">

    <com.coolcollege.aar.view.AutoFitTextureView
        android:id="@+id/tv_texture"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/k_dp_5"
        android:paddingBottom="@dimen/k_dp_10">

        <RelativeLayout
            android:id="@+id/rl_record"
            android:layout_width="@dimen/k_dp_50"
            android:layout_height="@dimen/k_dp_50"
            android:layout_gravity="center"
            android:background="@drawable/k_shape_circle_black_2d_stop"
            android:padding="@dimen/k_dp_8">

            <ImageView
                android:id="@+id/iv_shape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/k_shape_oval_red_record" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/k_dp_50"
            android:textColor="@color/k_black_2d"
            android:textSize="@dimen/k_sp_20" />

    </FrameLayout>
</RelativeLayout>