<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/k_dp_280"
    android:layout_height="@dimen/k_dp_153"
    android:background="@drawable/k_dialog_radius">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/k_dp_18"
        android:textColor="#2D3040"
        android:textSize="@dimen/k_sp_16"
        android:text="正在上传..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/k_dp_31"
        android:layout_marginLeft="@dimen/k_dp_22"
        android:layout_marginRight="@dimen/k_dp_22">

        <ProgressBar
            android:id="@+id/k_tv_dl_pBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="@dimen/k_dp_4"
            android:progressDrawable="@drawable/k_progress_bar" />

        <TextView
            android:id="@+id/k_tv_dl_num"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:textColor="#516AE6"
            android:layout_marginLeft="@dimen/k_dp_8"
            android:textSize="@dimen/k_sp_12"
            android:text="36%" />
    </LinearLayout>

    <View
        style="@style/k_parting_line"
        android:layout_marginTop="@dimen/k_dp_30"/>

    <TextView
        android:id="@+id/k_tv_dl_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/k_dp_11"
        android:textColor="#2D3040"
        android:textSize="@dimen/k_sp_18"
        android:text="取消" />
</LinearLayout>