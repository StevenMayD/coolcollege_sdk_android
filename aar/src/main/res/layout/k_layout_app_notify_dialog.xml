<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/k_white_ff"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/k_dp_10"
        android:textColor="@color/k_black"
        android:textSize="@dimen/k_sp_15"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/k_dp_15"
        android:layout_marginTop="@dimen/k_dp_10"
        android:layout_marginEnd="@dimen/k_dp_15"
        android:layout_marginBottom="@dimen/k_dp_10"
        android:padding="@dimen/k_dp_15"
        android:gravity="center"
        android:textColor="@color/k_black_2d"
        android:textSize="@dimen/k_sp_14" />

    <TextView style="@style/k_line_h_gray_05" />

    <include layout="@layout/k_layout_dialog_btm_btn" />


</LinearLayout>